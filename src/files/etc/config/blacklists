config blacklist 'ad_malware'
	option description 'Blocks ads and malware (curated from multiple sources)'
	option file '/etc/dns_blacklist/ad_malware'
	option name 'Ads and Malware'
	option source 'https://github.com/StevenBlack/hosts'

config blacklist 'adult'
	option description 'Blocks pornographic content'
	option file '/etc/dns_blacklist/adult'
	option name 'Adult Content'
	option source 'https://github.com/StevenBlack/hosts'

config blacklist 'fakenews'
	option description 'Blocks fake news content (including satirical)'
	option file '/etc/dns_blacklist/fakenews'
	option name 'Fake News'
	option source 'https://github.com/StevenBlack/hosts'

config blacklist 'gambling'
	option description 'Blocks content from gambling sites'
	option file '/etc/dns_blacklist/gambling'
	option name 'Gambling'
	option source 'https://github.com/StevenBlack/hosts'

config blacklist 'social'
	option description 'Blocks access to social netowrking sites'
	option file '/etc/dns_blacklist/social'
	option name 'Social Networking'
	option source 'https://github.com/StevenBlack/hosts'
