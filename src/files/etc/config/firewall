config defaults
	option disable_ipv6 '1'
	option forward 'REJECT'
	option input 'REJECT'
	option output 'ACCEPT'
	option syn_flood '1'

# We need to accept udp packets on port 68,
# see https://dev.openwrt.org/ticket/4108
config rule
	option name 'Allow-DHCP-Renew'
	option src 'wan'
	option proto 'udp'
	option dest_port '68'
	option target 'ACCEPT'
	option family 'ipv4'

config zone
	option masq '1'
	option mtu_fix '1'
	option name 'wan'
	option network 'wan'

config zone
	option input 'ACCEPT'
	option name 'lan_vpn1'
	option network 'lan_vpn1'

config zone
	option input 'ACCEPT'
	option name 'lan_vpn2'
	option network 'lan_vpn2'

config zone
	option input 'ACCEPT'
	option name 'lan_vpn3'
	option network 'lan_vpn3'

config zone
	option input 'ACCEPT'
	option name 'lan_vpn4'
	option network 'lan_vpn4'

config zone
	option input 'ACCEPT'
	option name 'lan_tor'
	option network 'lan_tor'

config zone
	option input 'ACCEPT'
	option name 'lan_clear1'
	option network 'lan_clear1'

config zone
	option input 'ACCEPT'
	option name 'lan_clear2'
	option network 'lan_clear2'

config zone
	option input 'ACCEPT'
	option name 'lan_local'
	option network 'lan_local'

config redirect
	option dest_ip '10.154.0.1'
	option dest_port '53'
	option src 'lan_vpn1'
	option src_dport '53'
	option target 'DNAT'

config redirect
	option dest_ip '10.154.1.1'
	option dest_port '53'
	option src 'lan_vpn2'
	option src_dport '53'
	option target 'DNAT'

config redirect
	option dest_ip '10.154.2.1'
	option dest_port '53'
	option src 'lan_vpn3'
	option src_dport '53'
	option target 'DNAT'

config redirect
	option dest_ip '10.154.3.1'
	option dest_port '53'
	option src 'lan_vpn4'
	option src_dport '53'
	option target 'DNAT'

config redirect
	option dest_ip '10.154.4.1'
	option dest_port '53'
	option src 'lan_tor'
	option src_dport '53'
	option target 'DNAT'

config redirect
	option dest_ip '10.154.5.1'
	option dest_port '53'
	option src 'lan_clear1'
	option src_dport '53'
	option target 'DNAT'

config redirect
	option dest_ip '10.154.6.1'
	option dest_port '53'
	option src 'lan_clear2'
	option src_dport '53'
	option target 'DNAT'

config redirect
	option dest_ip '10.154.7.1'
	option dest_port '53'
	option src 'lan_local'
	option src_dport '53'
	option target 'DNAT'

config include
	option enabled '1'
	option path '/etc/firewall.user'
	option reload '1'
