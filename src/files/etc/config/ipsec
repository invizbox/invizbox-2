config ipsec 'general'
	option debug '0'
	option rtinstall_enabled '0'
	option vipinstall_enabled '0'

config tunnel 'tunnel'
	option dpdaction 'restart'
	option dpddelay '300s'
	option keyexchange 'ikev2'
	option local_sourceip '%config'
	option local_updown '/etc/ipsec.user'
	option mode 'start'
	option remote_subnet '0.0.0.0/0'

config remote 'vpn_1'
	option authentication_method 'eap'
	option enabled '0'
	option gateway 'my_ipsec_server.com'
	option remote_identifier '%any'
	list tunnel 'tunnel'
	option mark '0x10000000/0xf0000000'

config remote 'vpn_2'
	option authentication_method 'eap'
	option enabled '0'
	option gateway 'my_ipsec_server.com'
	option remote_identifier '%any'
	list tunnel 'tunnel'
	option mark '0x20000000/0xf0000000'

config remote 'vpn_3'
	option authentication_method 'eap'
	option enabled '0'
	option gateway '10.10.10.10'
	option remote_identifier '%any'
	list tunnel 'tunnel'
	option mark '0x30000000/0xf0000000'

config remote 'vpn_4'
	option authentication_method 'eap'
	option enabled '0'
	option gateway '10.10.10.10'
	option remote_identifier '%any'
	list tunnel 'tunnel'
	option mark '0x40000000/0xf0000000'
